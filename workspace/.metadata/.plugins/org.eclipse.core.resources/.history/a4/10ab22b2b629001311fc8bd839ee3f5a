package ProdConsoExo6;

public class Buffer {
    private int valeur;
    private boolean consommer = true;
    
    public int get() {
        while (consommer == false) {}
            consommer = true;
            return valeur;
    }
    
    public void put(int i) {
    	while (!consommer) {}
    		valeur = i;
    		consommer = false;
    }  
}