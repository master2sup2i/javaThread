package ProdConsoExo6;

public class Buffer {
    private int valeur;
    private boolean consommer;
    
    public void get() {
        while (!consommer) {
            System.out.println (valeur);
            consommer = true;
        }
    }
    
    public void put(int i) {
    	while (!consommer) {
    		valeur = i;
    		consommer = false;
    	}
    }
    
}